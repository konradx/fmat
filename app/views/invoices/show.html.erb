<div class="row">
<h1>Invoice no: <%= @invoice.reference_number %></h1>

<table class="table table-striped table-hover">
  <tr>
  <th>ID</th>
  <th>Reference number</th>
  <th>Issue Date</th>
  <th>Due Date</th>
  <th>Status</th>
  <th>Tax</th>
  <th>Discount</th>
  <th>Net Amount</th>
  <th>Gross Amount</th>
  <th>Paid Amount</th>
  <th>Currency</th>
  <th>Created At</th>
  <th>Updated At</th>
  </tr>
  <tr>
    <td><%= @invoice.id %></td>
    <td><%= @invoice.reference_number %></td>
    <td><%= @invoice.issue_date %></td>
    <td><%= @invoice.due_date %></td>
    <td><%= @invoice.status %></td>
    <td><%= @invoice.tax %></td>
    <td><%= @invoice.discount %></td>
    <td><%= number_to_currency(@invoice.net_amount, locale: :pl ) %></td>
    <td><%= number_to_currency(@invoice.gross_amount) %></td>
    <td><%= number_to_currency(@invoice.paid_amount) %></td>
    <td><%= @invoice.currency %></td>
    <td><%= @invoice.created_at.to_s(:long) %></td>
    <td><%= @invoice.updated_at.to_s(:long) %></td>
  </tr>
</table>
<%= link_to 'Edit', edit_invoice_path(@invoice), class: 'button' %>
<%= link_to 'Delete', invoice_path(@invoice), method: :delete, data: { confirm: 'Are you sure?'}, class: 'button' %>
<%= link_to "All Invoices", invoices_path %>
<%= link_to "Printable Pdf", invoice_path(@invoice, format: "pdf") %>
</div>
