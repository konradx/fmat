<div class="row">
  <% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>
<h1><%= pluralize(@invoices.size, 'Invoice') %></h1>

<table class="table table-striped table-hover">
  <tr>
  <th>ID</th>
  <th>Reference number</th>
  <th>Issue Date</th>
  <th>Due Date</th>
  <th>Status</th>
  <th>Tax</th>
  <th>Discount</th>
  <th>Net Amount</th>
  <th>Gross Amount</th>
  <th>Paid Amount</th>
  <th>Currency</th>
  <th>Created At</th>
  <th>Updated At</th>
  <th>Actions</th>
  </tr>
	<% @invoices.each do |invoice| %>
  <tr>
    <td><%= link_to invoice.id, invoice %></td>
    <td><%= link_to invoice.reference_number, invoice %></td>
    <td><%= invoice.issue_date %></td>
    <td><%= invoice.due_date %></td>
    <td><%= invoice.status %></td>
    <td><%= invoice.tax %></td>
    <td><%= invoice.discount %></td>
    <td><%= number_to_currency(invoice.net_amount, locale: :pl ) %></td>
    <td><%= number_to_currency(invoice.gross_amount) %></td>
    <td><%= number_to_currency(invoice.paid_amount) %></td>
    <td><%= invoice.currency %></td>
    <td><%= invoice.created_at.to_s(:long) %></td>
    <td><%= invoice.updated_at.to_s(:long) %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'button' %></td>
    <td><%= link_to 'Delete', invoice_path(invoice), method: :delete, data: { confirm: 'Are you sure?'}, class: 'button' %></td>
  </tr>
<% end %>
</table>
</div>
