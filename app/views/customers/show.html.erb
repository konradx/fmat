<div class="row">
<h1>Customer: <%= @customer.name %> </h1>

<table class="table table-striped table-hover">
  <tr>
  <th>ID</th>
  <th>Name</th>
  <th>Tax Identificator</th>
  <th>Representative</th>
  <th>Address</th>
  <th>Created At</th>
  <th>Updated At</th>
  <th>Actions</th>
  </tr>
  <tr>
    <td><%= @customer.id%></td>
    <td><%= @customer.name %></td>
    <td><%= @customer.tax_identificator %></td>
    <td><%= @customer.representative %></td>
    <td><%= @customer.address %></td>
    <td><%= @customer.created_at.to_s(:long) %></td>
    <td><%= @customer.updated_at.to_s(:long) %></td>
    <td><%= link_to 'Edit', edit_customer_path(@customer), class: 'button' %>
        <%= link_to 'Delete', customer_path(@customer), method: :delete, data: { confirm: 'Are you sure?'}, class: 'button' %></td>
  </tr>
</table>
        <%= link_to 'All Customers', customers_path %>
        <%= link_to 'Printable Pdf', customer_path(@customer, format: 'pdf') %>

</div>
